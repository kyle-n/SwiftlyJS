    "preview-npm-files": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyle-n/SwiftlyJS.git"
  },
  "keywords": [
    "swift",
    "typescript",
    "javascript"
  ],
  "author": "Kyle Nazario",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kyle-n/SwiftlyJS/issues"
  },
  "homepage": "https://github.com/kyle-n/SwiftlyJS#readme",
  "devDependencies": {
    "@types/clone-deep": "^4.0.1",
    "@types/node": "^14.14.6",
    "clone-deep": "^4.0.1",
    "path": "^0.12.7",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  },
  "files": [
    "lib/*",
    "_bundles/*",
    "package.json"
  ]
}
