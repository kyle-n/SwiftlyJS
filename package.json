{
  "name": "swiftly-js",
  "version": "1.0.0",
  "description": "Swift-like extensions for JavaScript and TypeScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "compile": "tsc && webpack",
    "clean": "rm -rf _bundles lib",
    "build": "npm run clean && npm run compile && ./update-readme.sh",
